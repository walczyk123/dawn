{%- style -%}
  .solar-system{
    background-color: "black"
  }
  .sun {
    position: relative;
    background: yellow;
    width: 4rem;
    height: 4rem;
    margin: auto;
    top: 50%;
    border-radius: 2rem;
    animation: pulse 15s linear infinite;
    z-index: 12;
  }
  
  .planet {
    display: block;
    position: absolute;
    border-style: solid;
    border-color: white transparent transparent transparent;
    border-width: 1px 1px 0 0;
    border-radius: 50%;
  }

  .planet:hover, .satelite:hover {
    border-color: white;
    border-width: 2px;
  }
  
  .planet::before, .satelite::before{
    content: "";
    position: absolute;
    border-radius: 50%;
  }

  .mercury {
    top: calc(8rem / -2 -4rem / -2);
    left: calc(8rem / -2 - 4rem / -2);
    width: 8rem;
    height: 8rem;
    border-color: #88807b transparent transparent transparent;
    animation: orbit 5s linear infinite;
    text-align: right;
    z-index: 10;
  }
  
  .mercury::before {
    background-color: #787276;
    width: 0.7rem;
    height: 0.7rem;
    top: calc(8rem * 0.108);
    left: calc(8rem * 0.8538 - 0.7rem / 2);
  }
  
  .mercury:hover::after {
    content: "mercury";
    color: gray;
  }
  
  @keyframes orbit {
    to {
      transform: rotate(360deg);
    }
  }
  
{%- endstyle -%}
